#include <iostream>
#include <fstream>
#include <string>
#include <cctype>

using namespace std;

int main() {
    setlocale(LC_ALL, "RU");
    ifstream dates("names&pays.txt");
    int summ = 0;
    string line, name;
    int salary;
    
    if (!dates.is_open()) {
        cerr << "Ошибка открытия файла\n";
        return 1;
    }
    
    while (getline(dates, line)) {  // Читаем строку целиком
        stringstream ss(line);      // Создаем поток для разбора строки
        
        // Пропускаем имя (читаем все слова до числа)
        while (ss >> name) {
            if (isdigit(name[0])) {  // Если нашли число
                ss >> salary;        // Читаем зарплату
                summ += salary;      // Добавляем к сумме
                break;              // Переходим к следующей строке
            }
        }
    }

    cout << "Сумма зарплат: " << summ << endl;
    return 0;
}
